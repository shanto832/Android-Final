<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Sharp background image (to fade out) -->
    <ImageView
        android:id="@+id/bgSharp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/your_sharp_background"
        android:scaleType="centerCrop" />

    <!-- Blurred background image (initially invisible) -->
    <ImageView
        android:id="@+id/bgBlurred"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/your_blurred_background"
        android:alpha="0"
        android:scaleType="centerCrop" />

    <!-- Main content layout -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="50dp">

        <TextView
            android:id="@+id/tvChooseTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose a table:"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="20dp" />

        <!-- EditText for Name -->
        <EditText
            android:id="@+id/etName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your name"
            android:textColor="#000000"
            android:padding="12dp"
            android:background="@android:drawable/edit_text" />

        <!-- EditText for Phone Number -->
        <EditText
            android:id="@+id/etPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter your phone number"
            android:textColor="#000000"
            android:padding="12dp"
            android:background="@android:drawable/edit_text"
            android:inputType="phone" />

        <!-- Buttons for selecting tables -->
        <Button
            android:id="@+id/btnTable1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table 1"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnTable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table 2"
            android:layout_marginTop="8dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnTable3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table 3"
            android:layout_marginTop="8dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btnTable4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Table 4"
            android:layout_marginTop="8dp"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</FrameLayout>




