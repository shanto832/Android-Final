<!-- res/layout/activity_customer_table.xml -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvChooseTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a table:"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="20dp" />

    <Button
        android:id="@+id/btnTable1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table 1" />

    <Button
        android:id="@+id/btnTable2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table 2"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnTable3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table 3"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnTable4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Table 4"
        android:layout_marginTop="8dp" />
</LinearLayout>
